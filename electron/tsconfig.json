{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "../dist-electron",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "typeRoots": ["./main/types", "../node_modules/@types"]
  },
  "include": [
    "main/**/*.ts",
    "preload/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
